{
  "name": "Reminder Assistance",
  "description": "Fucking reminder ðŸ˜…",
  "manifest_version": 3,
  "version": "0.0.2",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["offscreen", "alarms", "tabs", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "commands": {
    "play-audio": {
      "suggested_key": { "default": "Alt+W" },
      "description": "play audio"
    },
    "stop-audio": {
      "suggested_key": { "default": "Alt+S" },
      "description": "stop audio"
    }
  }
}
